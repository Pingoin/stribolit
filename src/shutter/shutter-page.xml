<Page navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:df="nativescript-ui-dataform">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="50, *">
            <Label class="action-bar-title" text="shutter Speed Calculatrions" colSpan="2"/>
            <Label class="fas" text="&#xf0c9;" tap="onDrawerButtonTap"/>
        </GridLayout>
    </ActionBar>

    <StackLayout class="page__content" height="100%">
        <GridLayout class="page__content" columns="auto,auto" rows="auto,auto">
            <df:RadDataForm row="0" id="myDataForm" source="{{ shutterData }}" propertyCommitted="{{ dfPropertyCommit }}" commitMode="Immediate" metadata="{{ shutterMetadata }}"/>
        </GridLayout>
        <Label class="line"/>
        <Label text="NPF-Regel:"/>
        <Label text="{{npfValue}}"/>
        <Label text="500er-Regel:"/>
        <Label text="{{rule500}}"/>
        <Label text="600er-Regel:"/>
        <Label text="{{rule600}}"/>
    </StackLayout>
</Page>